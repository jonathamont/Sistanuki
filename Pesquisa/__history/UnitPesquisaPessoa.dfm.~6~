  inherited UpdateCadastro: TIBUpdateSQL
    RefreshSQL.Strings = (
      'Select '
      'from tb_pessoa '
      'where'
      '  CD_PESSOA = :CD_PESSOA')
    ModifySQL.Strings = (
      'update tb_pessoa'
      'set'
      '  CD_PESSOA = :CD_PESSOA,'
      '  NM_PESSOA = :NM_PESSOA,'
      '  NR_CPF = :NR_CPF,'
      '  NR_CNPJ = :NR_CNPJ,'
      '  FG_FISC_JURID = :FG_FISC_JURID,'
      '  FG_SEXO = :FG_SEXO,'
      '  DT_NASCIMENTO = :DT_NASCIMENTO,'
      '  NR_TELEFONE = :NR_TELEFONE,'
      '  NR_CELULAR = :NR_CELULAR,'
      '  DS_EMAIL = :DS_EMAIL,'
      '  CD_CIDADE = :CD_CIDADE,'
      '  FG_FUNC = :FG_FUNC,'
      '  DS_BAIRRO = :DS_BAIRRO,'
      '  DS_RUA = :DS_RUA'
      'where'
      '  CD_PESSOA = :OLD_CD_PESSOA')
    InsertSQL.Strings = (
      'insert into tb_pessoa'
      
        '  (CD_PESSOA, NM_PESSOA, NR_CPF, NR_CNPJ, FG_FISC_JURID, FG_SEXO' +
        ', DT_NASCIMENTO, '
      
        '   NR_TELEFONE, NR_CELULAR, DS_EMAIL, CD_CIDADE, FG_FUNC, DS_BAI' +
        'RRO, DS_RUA)'
      'values'
      
        '  (:CD_PESSOA, :NM_PESSOA, :NR_CPF, :NR_CNPJ, :FG_FISC_JURID, :F' +
        'G_SEXO, '
      
        '   :DT_NASCIMENTO, :NR_TELEFONE, :NR_CELULAR, :DS_EMAIL, :CD_CID' +
        'ADE, :FG_FUNC, '
      '   :DS_BAIRRO, :DS_RUA)')
    DeleteSQL.Strings = (
      'delete from tb_pessoa'
      'where'
      '  CD_PESSOA = :OLD_CD_PESSOA')
    Left = 496
    Top = 128
  end
